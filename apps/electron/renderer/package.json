{
  "name": "day2-desktop",
  "version": "1.0.11",
  "description": "Day2 Desktop App for Windows",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:vite": "vite",
    "build": "tsc && vite build",
    "prebuild:electron": "node scripts/bump-version.js",
    "build:electron": "npm run build && node scripts/build-with-env.js",
    "build:portable": "npm run build && set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win portable",
    "build:installer": "npm run build && set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win nsis",
    "build:installer-only": "npm run build && set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win nsis --config.win.target=nsis",
    "build:desktop": "npm run build && node scripts/copy-dist.js",
    "build:all": "npm run build && set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win nsis portable",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "wait-on http://localhost:5173 && electron ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "electron-updater": "^6.6.2",
    "livekit-client": "^2.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.1.3",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "dotenv": "^17.2.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "fs-extra": "^11.3.2",
    "typescript": "^5.9.2",
    "vite": "^6.0.5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.day2.desktop",
    "productName": "Day2 Desktop",
    "protocols": [
      {
        "name": "Day2 Invite Links",
        "schemes": [
          "day2"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "tnghia05",
      "repo": "Day2_desktop"
    },
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": false,
    "extraFiles": [
      {
        "from": "electron",
        "to": "electron",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": null,
      "signingHashAlgorithms": null,
      "signDlls": false,
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Day2 Desktop",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
